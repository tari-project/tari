    "lottie-web": "^5.9.6",
    "react": ">=18.0.0",
    "react-apexcharts": "^1.4.0",
    "react-css-transition-replace": "^4.0.5",
    "react-dom": ">=18.0.0",
    "react-hook-form": "^7.30.0",
    "react-hotkeys-hook": "^3.4.6",
    "react-paginate": "^8.1.3",
